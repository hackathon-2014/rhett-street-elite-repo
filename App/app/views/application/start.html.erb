<div class="container-fluid">
	<div class="row-fluid">
		<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
			<div class="container">
				<div class="col-xs-2">
				</div>
				<div class="col-xs-8" style="text-align: center; margin-top:8px;">
					<h4>Achieve!</h4>
				</div>
			</div>
		</nav>
	</div>
	<div style="margin-top: 70px;"></div>
	<div class="row-fluid">
		<div class="col-xs-12" style="text-align:center;">
			<% if flash[:error] %>
				<div class="alert alert-danger"><%= flash[:error] %></div>
			<% end %>
			<%= image_tag "social-github-lg.svg" %>
			<div style="margin-top: 35px;"></div>
			<%= form_tag("/submit_github_username", method: "post", class: "form") do %>
			  	<div class="form-group">
			  		<%= text_field_tag('username', '', placeholder: 'Github Username', class: 'form-control') %>
			  	</div>
			  	<div class="form-group">
			  		<%= submit_tag("Show Repositories", class: 'btn btn-primary') %>
			  	</div>
			<% end %>
		</div>
	</div>
</div>